# Ontos ML Workbench - Frontend Environment Configuration
# Copy this file to .env and configure for your environment

# ============================================================================
# API Configuration
# ============================================================================

# Backend API base URL
# Development: Point to local backend server
# Production: Leave empty to use relative URLs (same origin as frontend)
VITE_API_BASE_URL=http://localhost:8000

# API path prefix (must match backend API_PREFIX)
VITE_API_PREFIX=/api/v1

# API request timeout (milliseconds)
VITE_API_TIMEOUT=30000

# ============================================================================
# Application Configuration
# ============================================================================

# Application title
VITE_APP_TITLE=Ontos ML Workbench

# Application version
VITE_APP_VERSION=0.1.0

# Environment: development, staging, production
VITE_ENVIRONMENT=development

# Enable debug mode (shows debug info in UI)
VITE_DEBUG=true

# ============================================================================
# Feature Flags
# ============================================================================

# Enable monitoring features (MONITOR stage)
VITE_ENABLE_MONITORING=true

# Enable feedback collection features (IMPROVE stage)
VITE_ENABLE_FEEDBACK=true

# Enable experimental features
VITE_ENABLE_EXPERIMENTAL=false

# Enable APX development mode
VITE_ENABLE_APX=false

# Enable keyboard shortcuts
VITE_ENABLE_SHORTCUTS=true

# Enable analytics tracking
VITE_ENABLE_ANALYTICS=false

# ============================================================================
# UI Configuration
# ============================================================================

# Default page size for lists
VITE_DEFAULT_PAGE_SIZE=25

# Maximum items per page
VITE_MAX_PAGE_SIZE=100

# Auto-refresh interval for monitoring dashboards (milliseconds)
# Set to 0 to disable auto-refresh
VITE_REFRESH_INTERVAL=30000

# Show beta features badge
VITE_SHOW_BETA_BADGE=true

# Default theme: light, dark, system
VITE_DEFAULT_THEME=system

# ============================================================================
# Workflow Stage Configuration
# ============================================================================

# Default stage on app load: data, generate, label, train, deploy, monitor, improve
VITE_DEFAULT_STAGE=data

# Enable stage progress tracking
VITE_ENABLE_STAGE_PROGRESS=true

# Show stage help tooltips
VITE_SHOW_STAGE_HELP=true

# ============================================================================
# Data Visualization
# ============================================================================

# Maximum rows to display in data tables
VITE_MAX_TABLE_ROWS=1000

# Chart refresh interval (milliseconds)
VITE_CHART_REFRESH_INTERVAL=5000

# Enable data export features
VITE_ENABLE_EXPORT=true

# Export formats: csv, json, excel
VITE_EXPORT_FORMATS=["csv","json"]

# ============================================================================
# Canonical Labeling Tool
# ============================================================================

# Enable batch labeling mode
VITE_ENABLE_BATCH_LABELING=true

# Maximum items in batch labeling session
VITE_MAX_BATCH_SIZE=50

# Auto-save label drafts (milliseconds)
VITE_AUTOSAVE_INTERVAL=10000

# Show label confidence scores
VITE_SHOW_CONFIDENCE_SCORES=true

# ============================================================================
# Q&A Pair Review
# ============================================================================

# Default review mode: sequential, random, priority
VITE_DEFAULT_REVIEW_MODE=sequential

# Show AI-generated suggestions
VITE_SHOW_AI_SUGGESTIONS=true

# Enable keyboard navigation in review
VITE_ENABLE_REVIEW_SHORTCUTS=true

# ============================================================================
# Template Editor
# ============================================================================

# Enable syntax highlighting in template editor
VITE_ENABLE_SYNTAX_HIGHLIGHTING=true

# Template preview update delay (milliseconds)
VITE_TEMPLATE_PREVIEW_DELAY=500

# Maximum template size (characters)
VITE_MAX_TEMPLATE_SIZE=10000

# ============================================================================
# Training Configuration
# ============================================================================

# Show estimated training time
VITE_SHOW_TRAINING_ESTIMATES=true

# Enable training progress tracking
VITE_ENABLE_TRAINING_PROGRESS=true

# Poll training status interval (milliseconds)
VITE_TRAINING_POLL_INTERVAL=5000

# ============================================================================
# Deployment Configuration
# ============================================================================

# Show deployment history
VITE_SHOW_DEPLOYMENT_HISTORY=true

# Enable A/B testing UI
VITE_ENABLE_AB_TESTING=false

# Deployment environments
VITE_DEPLOYMENT_ENVS=["edge","cloud","airgap"]

# ============================================================================
# Monitoring Configuration
# ============================================================================

# Dashboard refresh interval (milliseconds)
VITE_DASHBOARD_REFRESH=30000

# Alert notification timeout (milliseconds)
VITE_ALERT_TIMEOUT=5000

# Show real-time metrics
VITE_ENABLE_REALTIME_METRICS=true

# Metrics retention (hours)
VITE_METRICS_RETENTION_HOURS=168

# ============================================================================
# Feedback & Improvement
# ============================================================================

# Enable inline feedback forms
VITE_ENABLE_INLINE_FEEDBACK=true

# Feedback categories
VITE_FEEDBACK_CATEGORIES=["quality","performance","usability","bug"]

# Show improvement suggestions
VITE_SHOW_IMPROVEMENT_SUGGESTIONS=true

# ============================================================================
# Performance Optimization
# ============================================================================

# Enable request caching
VITE_ENABLE_REQUEST_CACHE=true

# Cache duration (milliseconds)
VITE_CACHE_DURATION=300000

# Enable lazy loading for images
VITE_ENABLE_LAZY_LOADING=true

# Virtual scrolling threshold (items)
VITE_VIRTUAL_SCROLL_THRESHOLD=100

# ============================================================================
# Error Handling
# ============================================================================

# Show detailed error messages
VITE_SHOW_ERROR_DETAILS=true

# Enable error reporting
VITE_ENABLE_ERROR_REPORTING=false

# Error reporting endpoint
VITE_ERROR_REPORTING_URL=

# Retry failed requests
VITE_ENABLE_REQUEST_RETRY=true

# Maximum retry attempts
VITE_MAX_RETRY_ATTEMPTS=3

# ============================================================================
# External Integrations (Optional)
# ============================================================================

# Databricks workspace URL (for links)
VITE_DATABRICKS_WORKSPACE_URL=

# MLflow tracking UI URL
VITE_MLFLOW_URL=

# Unity Catalog UI URL
VITE_UC_URL=

# Slack webhook for notifications
VITE_SLACK_WEBHOOK_URL=

# ============================================================================
# Analytics & Tracking (Optional)
# ============================================================================

# Google Analytics ID
VITE_GA_ID=

# Mixpanel token
VITE_MIXPANEL_TOKEN=

# Sentry DSN for error tracking
VITE_SENTRY_DSN=

# ============================================================================
# Development Tools
# ============================================================================

# Enable React DevTools
VITE_ENABLE_REACT_DEVTOOLS=true

# Show component render times
VITE_SHOW_RENDER_TIMES=false

# Enable hot module replacement
VITE_HMR=true

# ============================================================================
# Notes
# ============================================================================

# For local development:
# 1. Copy this file to .env
# 2. Set VITE_API_BASE_URL to your local backend (http://localhost:8000)
# 3. Enable debug and experimental features as needed
# 4. Run: npm run dev

# For production build:
# 1. Set VITE_ENVIRONMENT=production
# 2. Set VITE_DEBUG=false
# 3. Leave VITE_API_BASE_URL empty (use relative URLs)
# 4. Enable only production-ready features
# 5. Run: npm run build

# Environment variables in Vite:
# - Only variables prefixed with VITE_ are exposed to the client
# - Variables are statically replaced at build time
# - Access via import.meta.env.VITE_VARIABLE_NAME
